        <title>Shift Details</title>
        <h1><b>RK Hospital<b></h1>
            <script>
                $(document).ready(function () {
                    $("#doctorId").on('click', function(){
                        $.ajax({
                            url: "/doctorshift",
                            success: function(data){
                                var doctor_name = '';
                                for (var i = 0; i < data.length; i++) {
                                    doctor_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                                }
                                $("#doctorId").html(doctor_name)
                            },
                        });
                    });

                    $("#shiftid").on('click', function(){
                        $.ajax({
                            url: "/shift",
                            success: function(data){
                                var shift_name = '';
                                for (var i = 0; i < data.length; i++) {
                                    shift_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                                }
                                $("#shiftid").html(shift_name)
                            },
                        });
                    });

                    $("#patientid").on('click', function(){
                        $.ajax({
                            url: "/patientlist",
                            success: function(data){
                                var patient_name = '';
                                for (var i = 0; i < data.length; i++) {
                                    patient_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                                }
                                $("#patientid").html(patient_name)
                            },
                        });
                    });

                    $('#btnSave').click(function(e){
                         var DocId = $('#doctorId').val();
                         var ShiftId = $('#shiftid').val();
                         var ShiftDt = $('#date').val();
                         var PatientId = $('#patientid').val();
     
                         var doctor_shift = {'DocId':DocId, 'ShiftId':ShiftId, 'ShiftDt':ShiftDt,'PatientId': PatientId};
                         var doctor_shift_url = "http://127.0.0.1:5000/assignShiftfordoctor";
                         $.ajax({
                             url: doctor_shift_url,
                             data: doctor_shift,
                             type: 'POST',
                             success:function(r){
                                 alert("Success");
                             },
                             error:function(r){
                                 alert("Error Occured when adding a shift");
                             }
                         });
                     });
                     $('#btnSearch').click(function(e){
                        $('#tblDoctorShift').jqGrid({
                            url:'/loaddoctorshift',
                            datatype: 'json',
                            colModel:[{name:'Doctor Name'},
                                    {name: 'Shift Type'}, 
                                    {name: 'Shift Date'},
                                    {name: 'Patient Name'}]
                        });
                    });
                });
            </script>
    </head>
    <body>
        <div class="container">    
