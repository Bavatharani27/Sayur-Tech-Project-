                    <label style="position:absolute; left:360px; top:80px;">Shift</label><br><br>
                    <select name="shift" id="shiftid"> 
                        <option> --select-- </option>
                    </select>

                    <label style="position:absolute; left:600px; top:80px;">Date</label><br><br>
                    <input type="date" id="date">

                    <label style="position:absolute; left:900px; top:80px;">Patient</label><br><br>
                    <select name="patient" id="patientid" title="Select Patient"><option> --select-- </option></select>

                    <table id='tblDoctorShift'></table>
                    <button class="save" id="btnSave"><b>Save</b></button>
                    <button class="clear"><b>Clear</b></button>
                    <button class="search" id="btnSearch"><b>Search</b></button>
                </div>
            </div>
        </div>
