<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/themes/redmond/jquery-ui.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/css/ui.jqgrid.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/jquery.jqgrid.min.js"></script>
        <script>
            $(document).ready(function () {
               $("#nurseid").val(function(){
                   $.ajax({
                       url: "/getnurselist", 
                       success: function(data){
                             var nurse_name = '<option value="0"> Select Nurse';
                            for (var i = 0; i < data.length; i++) {
                                nurse_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                            }
                            $("#nurseid").html(nurse_name)
                        },
                    });
                });

                $("#shiftid").val(function(){
                    $.ajax({
                        url: "/shift",
                        success: function(data){
                            var shift_name = '<option value="0"> Select Shift';
                            for (var i = 0; i < data.length; i++) {
                                shift_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                            }
                            $("#shiftid").html(shift_name)
                        },
                    });
                });

                $('#btnSave').click(function(e){
                    var NurseId = $('#nurseid').val();
                    var ShiftId = $('#shiftid').val();
                    var ShiftDt = $('#date').val();
                    
                    var nurse_shift = {'NurseId':NurseId, 'ShiftId':ShiftId, 'ShiftDt':ShiftDt};
                    var nurse_shift_url = "http://127.0.0.1:5000/assignShiftfornurse";
                    $.ajax({
                        url: nurse_shift_url,
                        data: nurse_shift,
                        type: 'POST',
                        success:function(r){
                            alert("Assigned Successfully");
                        },
                        error:function(r){
                            alert("Error Occured when adding a shift");
                        }
                    });
                });
                $('#btnSearch').click(function(e){
                    var NurseId = $('#nurseid').val();
                    var ShiftId = $('#shiftid').val();
                    var ShiftDt = $('#date').val(); 
                    var nurse_shift = {'NurseId':NurseId, 'ShiftId':ShiftId, 'ShiftDt':ShiftDt};
                    $('#tblNurseShift').jqGrid({
                        url:'/loadnurseshift',
                        postData: nurse_shift,
                        datatype: "json",
                        mtype: 'POST',
                        colModel:[{name:'Nurse Name'},
                                {name: 'Shift Type'}, 
                                {name: 'Shift Date', width: 350}]
                    });
                }); 
                $('#btnClear').click(function(e){
                    $('#nurseid').val("");
                    $('#shiftid').val("");
                    $('#date').val(""); 
                    $('#tblNurseShift').GridUnload(); 
                });
            });
        </script>
        
        <style>
            h1{
                text-align: center;
            }
            body{
                background-color:#e6e6ff;
            }
            #nurseid{
                position:absolute; 
                top:70px;
            }
            #shiftid{
                position:absolute; left:350px;
                top:70px;
            }
            #date{
                position:absolute; left:650px;
                top:70px;
            }
            .save {
                background-color:#92B7F1;
                width: 55px;
                height: 29px;
                border: 1px solid #909090;
                border-radius: 10%;
                position:absolute; left:1000px; top:135px;
            }
            .clear {
                background-color:#92B7F1;
                width: 55px;
                height: 29px;
                border: 1px solid #909090;
                border-radius: 10%;
                position:absolute; left:1090px; top:135px;
            }
            .search {
                background-color:#92B7F1;
                width: 55px;
                height: 29px;
                border: 1px solid #909090;
                border-radius: 10%;
                position:absolute; left:1170px; top:135px;
            }
            .grid {
                position:absolute; left:210px; top:165px;
            }
            .select{
                padding: 8px 30px;
                color: #333333;
                background-color: #eeeeee;
                border: 1px solid #dddddd;
                cursor: pointer;
                border-radius: 5px; 
        
            }
            .select:focus,
            .select:hover{
                outline:none;
                border: 1px solid #bbbbbb;
            }
            .select{
                background: #ffffff;
            }
            .date{
                padding: 8px 30px;
                color: #333333;
                background-color: #eeeeee;
                border: 1px solid #dddddd;
                cursor: pointer;
                border-radius: 5px; 
            }
            .date:focus,
            .date:hover{
                outline:none;
                border: 1px solid #bbbbbb;
            }
            .date{
                background: #ffffff;
            }
        </style>
        <title>Shift Details</title>
        <h1><b>RK Hospital<b></h1>
    </head>
    <body>
        <div class="container">    
            <div class="row">
                <div class="col-md-6">
                    <label style="position:absolute; top:30px;">Nurse</label><br><br>
                    <select name="nurse" id="nurseid" class="select" title="Select your option">
                       
                    </select>
                    <label style="position:absolute; left:350px; top:30px;">Shift</label><br><br>
                    <select name="shift" id="shiftid" class="select"> 
                        <option value="" disabled selected>Select Shift</option>
                    </select>

                    <label style="position:absolute; left:650px; top:30px;">Date</label><br><br>
                    <input type="date" id="date" class="date">

                    <button class="save" id="btnSave"><b>Save</b></button>
                    <button class="clear" id="btnClear"><b>Clear</b></button>
                    <button class="search" id="btnSearch"><b>Search</b></button>

                    <div class="grid">
                        <table id='tblNurseShift'></table>
                    </div>

                </div>
            </div>
        </div>
        
