<html>
    <head>
        <title>Doctor</title>
        <h1>RK Hospital</h1>
        <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/themes/redmond/jquery-ui.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/css/ui.jqgrid.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/jquery.jqgrid.min.js"></script>

        <script>
            $(document).ready(function (){
                $('#nurseName').hide();
                $('#currentDate').hide();
                $('#lblnurseName').hide();
                $('#lblcurrentDate').hide();
                $('#lblPatient').hide();
                $('#patientid').hide();
                $('#lblFlag').hide();
                $('#lblFlagYes').hide();
                $('#lblFlagNo').hide();
                $('#attendflagY').hide();
                $('#attendflagN').hide();
                $('#lblDuration').hide();
                $('#numduration').hide();

                $('#btnSearch').hide();
                $('#btnClear').hide(); 
                $('#btnClose').hide(); 

                $('#btnActivitySave').hide();
                $('#btnActivityClear').hide();
                $('#btnActivityClose').hide();
                $('#btnActivitySearch').hide();


                $('#shiftdetails').click(function(){
                    $('#lblnurseName').show();
                    $('#nurseName').show();
                    $('#nurseName').val(localStorage.getItem("UserName"));
                    $('#currentDate').show();
                    $('#lblcurrentDate').show();
                    $('#btnSearch').show();
                    $('#btnClear').show(); 
                    $('#btnClose').show(); 
                });

                $('#myactivity').click(function(){
                    $('#lblnurseName').show();
                    $('#nurseName').show();
                    $('#nurseName').val(localStorage.getItem("UserName"));
                    $('#currentDate').show();
                    $('#lblcurrentDate').show();
                    $('#lblPatient').show();
                    $('#patientid').show();
                    $('#lblFlag').show();
                    $('#lblFlagYes').show();
                    $('#lblFlagNo').show();
                    $('#attendflagY').show();
                    $('#attendflagN').show();
                    $('#lblDuration').show();
                    $('#numduration').show();
                    $("#patientid").val(function(){
                        $.ajax({
                            url: "/patientlist",
                            success: function(data){
                                var patient_name = '<option value="0"> Select Patient';
                                for (var i = 0; i < data.length; i++) {
                                    patient_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                                }
                                $("#patientid").html(patient_name)
                            },
                        });
                    });
                    $('#btnActivitySave').show();
                    $('#btnActivityClear').show();
                    $('#btnActivityClose').show();
                    $('#btnActivitySearch').show(); 
                });

                $('#btnSearch').click(function(e){
                    var NurseId = localStorage.getItem("UserId");
                    var ShiftDt = $('#currentDate').val(); 
                    var nurse_shift = {'NurseId':NurseId, 'ShiftDt':ShiftDt};
                    $('#tblNurseDetails').jqGrid({
                        url:'/loadnursedetails',
                        postData: nurse_shift,
                        datatype: "json",
                        mtype: 'POST',
                        colModel:[{name:'Nurse Name'},
                                {name: 'Shift Type'}, 
                                {name: 'Shift Date', width: 350}]
                    });
                });

                $('#btnClear').click(function(e){
                    $('#currentDate').val(''); 
                    $('#tblNurseDetails').GridUnload(""); 
                });

                $('#btnClose').click(function(e){
                    $('#nurseName').hide();
                    $('#currentDate').hide();
                    $('#lblnurseName').hide();
                    $('#lblcurrentDate').hide();
        
                    $('#btnSearch').hide();
                    $('#btnClear').hide(); 
                    $('#btnClose').hide(); 
                    $('#tblNurseDetails').GridUnload(""); 
                });

                $('#btnActivitySave').click(function(e){
                    var NurseId = localStorage.getItem("UserId");
                    var CurrentDt = $('#currentDate').val();
                    CurrentDt = CurrentDt.substring(0,4) + '-'+ CurrentDt.substring(5,7) +'-'+ CurrentDt.substring(8,10);
                    var PatientId = $('#patientid').val();
                    var AttendFlag = ''; // $('#attendflag').val();
                    if(attendflagY.checked == true)
                        AttendFlag = attendflagY.value;
                    else
                        AttendFlag = attendflagN.value;
                    var Duration = $('#numduration').val();

                    var nurse_activity = {'NurseId':NurseId, 'CurrentDt':CurrentDt, 'PatientId': PatientId, 'AttendFlag': AttendFlag, 'Duration':Duration};
                    var nurse_activity_url = "/nurseactivitysave";
                    $.ajax({
                        url: nurse_activity_url,
                        data: nurse_activity,
                        type: 'POST',
                        success:function(r){
                            alert("Added Successfully");
                        },
                        error:function(r){
                            alert("Error Occured when adding Activity");
                        }
                    });
                });

                $('#btnActivityClear').click(function(e){
                    $('#currentDate').val(''); 
                    $('#tblNurseActivityDetails').GridUnload(""); 
                    $('#patientid').val(''); 
                    attendflagY.checked = false; 
                    attendflagN.checked = false; 
                    $('#numduration').val(''); 
                });

                $('#btnActivitySearch').click(function(e){
                    var AttendFlag = '';
                    var NurseId = localStorage.getItem("UserId");
                    var CurrentDt = $('#currentDate').val();
                    CurrentDt = CurrentDt.substring(0,4) + '-'+ CurrentDt.substring(5,7) +'-'+ CurrentDt.substring(8,10);
                    var PatientId = $('#patientid').val();
                    if(attendflagY.checked == true)
                        AttendFlag = attendflagY.value;
                    else
                        AttendFlag = attendflagN.value;
                 //   var AttendFlag = $('#attendflagY').val();
                    var Duration = $('#numduration').val();
                    var nurse_activity_details = {'NurseId':NurseId, 'CurrentDt':CurrentDt, 'PatientId':PatientId, 'AttendFlag':AttendFlag, 
                    'Duration':Duration};
                    $('#tblNurseActivityDetails').jqGrid({
                        url:'/loadnurseactivitydetails',
                        postData: nurse_activity_details,
                        datatype: "json",
                        mtype: 'POST',
                        colModel:[{name:'Nurse Name'},
                                {name: 'Activity Date', width: 350},
                                {name: 'Patient Name'},
                                {name: 'Attended Flag'}, 
                                {name: 'Duration'}]
                    });
                });

                $('#btnActivityClose').click(function(e){
                    $('#nurseName').hide();
                    $('#currentDate').hide();
                    $('#lblnurseName').hide();
                    $('#lblcurrentDate').hide();
                    $('#lblPatient').hide();
                    $('#patientid').hide();
                    $('#lblFlag').hide();
                    $('#lblFlagYes').hide();
                    $('#lblFlagNo').hide();
                    $('#attendflag').hide();
                    $('#attendflagY').hide();
                    $('#attendflagN').hide();
                    $('#lblDuration').hide();
                    $('#numduration').hide();
                    $('#btnActivitySave').hide();
                    $('#btnActivityClear').hide(); 
                    $('#btnActivityClose').hide(); 
                    $('#btnActivitySearch').hide();
                    $('#tblNurseActivityDetails').GridUnload(""); 
                });
            });
        </script>
    
