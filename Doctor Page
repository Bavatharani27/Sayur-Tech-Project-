        <title>Doctor</title>
        <h1>RK Hospital</h1>
        <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/themes/redmond/jquery-ui.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/css/ui.jqgrid.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.15.5/jquery.jqgrid.min.js"></script>

        <script>
            $(document).ready(function (){
                $('#doctorName').hide();
                $('#currentDate').hide();
                $('#lbldoctorName').hide();
                $('#lblcurrentDate').hide();
                $('#lblPatient').hide();
                $('#patientid').hide();
                $('#lblFlag').hide();
                $('#attendflag').hide();
                $('#lblDuration').hide();
                $('#numduration').hide();

                $('#btnSearch').hide();
                $('#btnClear').hide(); 
                $('#btnClose').hide(); 


                $('#shiftdetails').click(function(){
                    $('#lbldoctorName').show();
                    $('#doctorName').show();
                    $('#doctorName').val(localStorage.getItem("UserName"));
                    $('#currentDate').show();
                    $('#lblcurrentDate').show();
                    $('#btnSearch').show();
                    $('#btnClear').show(); 
                    $('#btnClose').show(); 
                });

                $('#myactivity').click(function(){
                    $('#lbldoctorName').show();
                    $('#doctorName').show();
                    $('#doctorName').val(localStorage.getItem("UserName"));
                    $('#currentDate').show();
                    $('#lblcurrentDate').show();
                    $('#lblPatient').show();
                    $('#patientid').show();
                    $('#lblFlag').show();
                    $('#attendflag').show();
                    $('#lblDuration').show();
                    $('#numduration').show();
                    $("#patientid").val(function(e){
                        var DoctorId = localStorage.getItem("UserId");
                       // var doctor = {'DoctorId':DoctorId};
                        $.ajax({
                           // data: doctor,
                            url: "/assignedpatientlist"+"/"+DoctorId,
                            success: function(data){
                                var patient_name = '<option value="0"> Select Patient';
                                for (var i = 0; i < data.length; i++) {
                                    patient_name += '<option value="' + data[i].id + '">' + data[i].name + "</option>";
                                }
                                $("#patientid").html(patient_name)
                            },
                        });
                    });
                  /*  $('#btnSearch').show();
                    $('#btnClear').show(); 
                    $('#btnClose').show(); */
                });

                $('#btnSearch').click(function(e){
                    var DoctorId = localStorage.getItem("UserId");
                    var ShiftDt = $('#currentDate').val(); 
                    var doctor_shift = {'DoctorId':DoctorId, 'ShiftDt':ShiftDt};
                    $('#tblDoctorDetails').jqGrid({
                        url:'/loaddoctordetails',
                        postData: doctor_shift,
                        datatype: "json",
                        mtype: 'POST',
                        colModel:[{name:'Doctor Name'},
                                {name: 'Shift Type'}, 
                                {name: 'Shift Date', width: 350},
                                {name: 'Patient Name'},
                                {name: 'Attended Flag'}]
                    });
                });

                $('#btnClear').click(function(e){
                    $('#currentDate').val(''); 
                    $('#tblDoctorDetails').GridUnload(""); 
                });

                $('#btnClose').click(function(e){
                    $('#doctorName').hide();
                    $('#currentDate').hide();
                    $('#lbldoctorName').hide();
                    $('#lblcurrentDate').hide();
                    $('#btnSearch').hide();
                    $('#btnClear').hide(); 
                    $('#btnClose').hide(); 
                    $('#tblDoctorDetails').GridUnload(""); 
                });

            });
        </script>
    
