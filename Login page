<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js">
  $(document).ready(function(){
    $('#btnLogin').on('click', function(e){
      // var Id = $('#txtId').val();
      var login_username = $('#txtUserName').val();
      var login_password = $('#txtPassword').val();

      var loginUser = {'login_username':login_username, 'login_password':login_password};
      var login_url = "http://127.0.0.1:5000/userlogin";
      $.ajax({
          url: login_url,
          type: 'POST',
          data: loginUser, 
          success:function(r){
            alert("success");
          },
          error:function(r){
              alert("error");
          }
      });
    });
});
</script>
