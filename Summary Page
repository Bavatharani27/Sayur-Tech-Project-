    <script>
        function favTutorial() {
            var mylist = $("#myList").val();
            if(mylist == '0'){
                $('#lbldoctor').hide();
                $('#doctorId').val('');
                $('#doctorId').hide();
                $('#lblnurse').hide();
                $('#nurseId').val('');
                $('#nurseId').hide();
            }
            if(mylist == '1' || mylist == '3' || mylist == '4'){
                $('#lbldoctor').show();
                $('#doctorId').val('');
                $('#doctorId').show();
                $('#lblnurse').hide();
                $('#nurseId').val('');
                $('#nurseId').hide();
            }
            if(mylist == '2'){
                $('#lbldoctor').hide();
                $('#doctorId').val('');
                $('#doctorId').hide();
                $('#lblnurse').show();
                $('#nurseId').val('');
                $('#nurseId').show();
            }
        }
    </script>
